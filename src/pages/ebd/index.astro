---
import { sanityClient } from "sanity:client";
import Layout from '../../layouts/Layout.astro';
import { urlForImage } from "../../lib/urlForImage";


const ebd = await sanityClient.fetch(`*[_type == "ebd" && defined(slug)] | order(publishedAt desc)`);
const ebdPage = await sanityClient.fetch(`*[_type == "ebdPage" ][0]`);
console.log('ebdPage',ebdPage.mainImage.asset)
---

<Layout title="EBD - CB Atos 29">
	<section class="w-full max-w-[1280px] flex flex-col gap-4 items-center">
		<div class="w-full">
			<img src={urlForImage(ebdPage.mainImage.asset._ref).url()} alt="Vem pra celula" class="object-fill w-full max-h-[414px]">
		</div>
		<div class="w-full flex items-center justify-center">
			<h1 class="text-primary-light font-bold text-2xl">{ebdPage.title}</h1>
		</div>
		<ul class="w-full flex flex-col md:grid md:grid-cols-2 lg:grid-cols-3 xl:grid-rows-2 gap-4 px-8 xl:px-0">
			{ebd.map((ebd: any) => (
				<li class="shadow-md  w-full rounded-md py-4 flex flex-col gap-4 border border-gray-100">
					<div class="flex justify-end">
						<h2 class="bg-secondary-blue w-3/4 h-14 flex items-center px-8 rounded-tl-full rounded-bl-full text-white">
							{ebd.title}
						</h2>
					</div>
					<p class="bg-primary-light px-4 py-2 text-xs font-bold text-white">{ebd.description}</p>
					<div class="flex flex-col gap-2 px-4">
						{ebd.content && ebd.content.map((content:any) => (
							<div class="text-primary-light flex gap-2">
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
								<path fill-rule="evenodd" d="M8.603 3.799A4.49 4.49 0 0 1 12 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 0 1 3.498 1.307 4.491 4.491 0 0 1 1.307 3.497A4.49 4.49 0 0 1 21.75 12a4.49 4.49 0 0 1-1.549 3.397 4.491 4.491 0 0 1-1.307 3.497 4.491 4.491 0 0 1-3.497 1.307A4.49 4.49 0 0 1 12 21.75a4.49 4.49 0 0 1-3.397-1.549 4.49 4.49 0 0 1-3.498-1.306 4.491 4.491 0 0 1-1.307-3.498A4.49 4.49 0 0 1 2.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 0 1 1.307-3.497 4.49 4.49 0 0 1 3.497-1.307Zm7.007 6.387a.75.75 0 1 0-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.14-.094l3.75-5.25Z" clip-rule="evenodd" />
								</svg>

								<span>{content}</span>
							</div>
						))}
					</div>
					<div class="px-4 w-full">
						<a href={"/ebd/" + ebd.slug.current} class="w-full h-12 cursor-pointer bg-secondary-blue flex items-center justify-center text-white font-bold text-xl rounded-full">Inscreva-se</a>
					</div>
				</li>
			))}
		</ul>
	</section>	
</Layout>